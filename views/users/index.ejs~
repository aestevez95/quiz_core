<section>

<header>
  <h2> Usuarios </h2>
</header>

<table>
  <thead>
    <tr>
      <th>Nombre de usuario:</th>
      <th>Administrador:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% for (var i in users) { %>
      <tr>
         <td> <%= users[i].username %>  </td>
         <td> <%= users[i].isAdmin ? "Si" : "No" %> </td>

	 <td> <a href="/users/<%= users[i].id %>" > Ver </a> </td>
	 <% if (session.user) { %>
	   <% if (session.user.isAdmin || session.user.id === user.id) { %>
             <td>
               <a href="/users/<%= users[i].id %>/edit"><button>editar</button></a>
             </td>
           <% } %>

	   <% if (session.user.isAdmin && session.user.id !== user.id) { %>
             <td>
               <a href="/users/<%= users[i].id %>?_method=DELETE" 
                  onClick="return confirm('Borrar cuenta: <%= users[i].username %>');">
                  <button>borrar</button> 
               </a> 
             </td>
           <% } %>
	 <% } %>
      </tr>
    <%  }; %>
  </tbody>
</table>

<footer>
  <nav> 
      <% if (session.user) { %>
  	<a href="/users/new"><button type="button">Crear usuario</button></a>
      <% }; %>
  </nav>
</footer>
<section>

